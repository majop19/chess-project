{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "#front/*": ["src/client/*"],
      "#back/*": ["src/server/*"]
    },

    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",

    "jsx": "react-jsx",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/client", "src/pages"],
  "exclude": ["**/*.d.ts"]
}
