{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "#front/*": ["src/client/*"],
      "#back/*": ["src/server/*"]
    },
    "target": "es2024",
    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/client", "src/pages", "vite.config.ts"]
}
